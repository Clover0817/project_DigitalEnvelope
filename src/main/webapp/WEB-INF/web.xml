<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
<context-param>
    <param-name>contextPath</param-name>
    <param-value>/SecretLetter</param-value>
  </context-param>
<servlet>
    <servlet-name>MainServlet</servlet-name>
    <servlet-class>view.MainServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>MainServlet</servlet-name>
    <url-pattern>/welcome</url-pattern>
</servlet-mapping>
<servlet>
    <servlet-name>KeyPairServlet</servlet-name>
    <servlet-class>view.KeyPairServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>KeyPairServlet</servlet-name>
    <url-pattern>/keyPair</url-pattern>
</servlet-mapping>
<servlet>
    <servlet-name>SecretKeyServlet</servlet-name>
    <servlet-class>view.SecretKeyServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>SecretKeyServlet</servlet-name>
    <url-pattern>/secretKey</url-pattern>
</servlet-mapping>
<servlet>
    <servlet-name>CreateEnvelopeServlet</servlet-name>
    <servlet-class>view.CreateEnvelopeServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>CreateEnvelopeServlet</servlet-name>
    <url-pattern>/createEnvelope</url-pattern>
</servlet-mapping>
<servlet>
    <servlet-name>VerifyEnvelopeServlet</servlet-name>
    <servlet-class>view.VerifyEnvelopeServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>VerifyEnvelopeServlet</servlet-name>
    <url-pattern>/verifyEnvelope</url-pattern>
</servlet-mapping>
<jsp-config>
	        <taglib>
	            <taglib-uri>/WEB-INF/c.tld</taglib-uri>
	            <taglib-location>/WEB-INF/c.tld</taglib-location>
	        </taglib>
	</jsp-config>
</web-app>
